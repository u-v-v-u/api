// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id       String @id // This should be a bas64 encoding of when the user registered @AEDT
  email    String // This should be hashed for privacy.
  password String // This should be hashed for security.
}
